<header class="flex justify-between items-center px-6 py-3 bg-ghDark">
  <div class="flex relative">
    <a href={~p"/"}>
      <img src="/images/gist-logo.svg" alt="Logo" class="h-8 w-auto">
    </a>
    <a href={~p"/"} class="mr-6">
      <div class="text-white font-brand font-bold text-3xl">GistHub</div>
    </a>
    <div>
      <input 
        type="text" 
        class="rounded-lg bg-ghDark-dark border-white px-3 py-1 mr-5
